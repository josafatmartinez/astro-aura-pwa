---
import HoroscopeCard from '@/components/HoroscopeCard.astro';
import Layout from '@layouts/Layout.astro';

const title = "AstroAura – Tu guía cósmica diaria";
const description = "Consulta tu horóscopo diario, compatibilidad amorosa y carta natal básica. Astrología personalizada en español.";
const signos = [
  { sign: "aries", emoji: "♈", element: "Fuego" },
  { sign: "tauro", emoji: "♉", element: "Tierra" },
  { sign: "géminis", emoji: "♊", element: "Aire" },
  { sign: "cáncer", emoji: "♋", element: "Agua" },
  { sign: "leo", emoji: "♌", element: "Fuego" },
  { sign: "virgo", emoji: "♍", element: "Tierra" },
  { sign: "libra", emoji: "♎", element: "Aire" },
  { sign: "escorpio", emoji: "♏", element: "Agua" },
  { sign: "sagitario", emoji: "♐", element: "Fuego" },
  { sign: "capricornio", emoji: "♑", element: "Tierra" },
  { sign: "acuario", emoji: "♒", element: "Aire" },
  { sign: "piscis", emoji: "♓", element: "Agua" }
];
---

<Layout {title} {description}>
  <main class="flex items-center justify-center min-h-[80vh] p-4 text-center text-white">
    <div class="w-full max-w-md mx-auto">
      <h1 class="text-2xl font-bold md:text-3xl lg:text-4xl">✨ Bienvenido a AstroAura</h1>
      <p class="mt-2 text-xs md:text-sm lg:text-base">Tu guía cósmica diaria</p>
      <div class="grid grid-cols-2 gap-3 mt-4 sm:grid-cols-3 md:grid-cols-4 md:gap-4">
        {signos.map(signo => (
          <HoroscopeCard sign={signo.sign} emoji={signo.emoji} element={signo.element} />
        ))}
      </div>
    </div>
  </main>
</Layout>
