---
import Layout from '@layouts/Layout.astro';

const title = "AstroAura – Tu guía cósmica diaria";
const description = "Consulta tu horóscopo diario, compatibilidad amorosa y carta natal básica. Astrología personalizada en español.";
---

<Layout {title} {description}>
	<main class="flex items-center justify-center min-h-screen p-4 sm:p-6 md:p-8 text-center text-white">
		<div class="max-w-md mx-auto">
			<h1 class="text-2xl sm:text-3xl md:text-4xl font-bold">✨ Bienvenido a AstroAura</h1>
			<p class="mt-2 text-sm sm:text-base">Tu guía cósmica diaria</p>
			<a href="/horoscopes/aries" class="inline-block mt-4 sm:mt-6 bg-purple-600 px-4 py-2 rounded-full text-white hover:bg-purple-700 transition-colors text-sm sm:text-base">
				Ver horóscopo de Aries
			</a>
		</div>
	</main>
</Layout>
