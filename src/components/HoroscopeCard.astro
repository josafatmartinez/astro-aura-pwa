---
interface Props {
  sign: string;       // ej: "aries"
  emoji: string;      // ej: "â™ˆ"
  element: string;    // ej: "Fuego"
}

const { sign, emoji, element } = Astro.props;
---

<a
  href={`/horoscopes/${sign.toLowerCase()}`}
  class="flex flex-col items-center justify-center p-4 bg-gradient-to-br from-purple-800 to-black rounded-2xl shadow-md hover:scale-105 transition transform cursor-pointer border border-purple-600"
>
  <div class="text-5xl">{emoji}</div>
  <h3 class="mt-2 text-xl font-semibold capitalize">{sign}</h3>
  <p class="text-sm text-purple-300">{element}</p>
</a>
